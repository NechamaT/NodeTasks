<div class="row">
    <div class="col-md-8 offset-md-2">
        <a href="/tasks/addtask" class="btn btn-success">New Item</a>
        <br />
        <table class="table table-hover table-striped table-bordered">
            <tr>
                <th>Title</th>
                <th>Category Name</th>
                <th>Due Date</th>
                <th>Mark as Completed</th>
            </tr>

            <% for (let i=0; i < tasks.length; i++) { %>
                <tr  class="<%= tasks[i].DueDate < new Date() ? 'table-danger' : '' %>">
                    <td>
                        <%= tasks[i].Title %>
                    </td>
                    <td>
                        <%= tasks[i].CategoryName %>
                    </td>
                    <td>
                        <%= tasks[i].DueDate %>
                    </td>
                    <td>

                        <form method="post" action="/tasks/markAsCompleted">
                            <input name="id"  type="hidden" value="<%= tasks[i].Id %>"">
                            <button class="btn btn-primary">Mark as Completed</button>
                        </form>
                    </td>
                </tr>
            <%}%>
        </table>
    </div>
</div>