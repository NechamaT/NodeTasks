<div class="row">
    <div class="col-md-8 offset-md-2">
        <a href="/categories/addcategory" class="btn btn-success">New Category</a>
        <br />
        <table class="table table-hover table-striped table-bordered">
            <tr>
                <th>Category Name</th>
                <th>Edit</th>
            </tr>

            <% for (let i=0; i < categories.length; i++) { %>
                <tr>
                    <td>
                        <a href="/categories/bycategory?id=<%= categories[i].Id%>">
                           <%= categories[i].Name%>
                        </a>
                    </td>
                    <td>
                        <a href="/categories/editcategory?id=<%= categories[i].Id%>" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            <%}%>

        </table>
    </div>
</div>